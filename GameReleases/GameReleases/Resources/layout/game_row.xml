
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relativeLayout1">
        <TextView
            android:textSize="70px"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="40px"
            android:gravity="right"
            android:layout_below="@id/linearLayout1"
            android:id="@+id/countDownView" />
        <android.support.v7.widget.CardView
            android:layout_width="264px"
            android:layout_height="350px"
            android:layout_marginTop="8px"
            android:layout_marginLeft="20px"
            android:layout_marginRight="25px"
            app:cardCornerRadius="43dp"
            android:id="@+id/cardView1">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/gameCover" />
        </android.support.v7.widget.CardView>
        <TextView
            android:text="Game name"
            android:textSize="80px"
            android:layout_width="match_parent"
            android:layout_height="95px"
            android:layout_marginTop="10px"
            android:layout_toRightOf="@id/cardView1"
            android:id="@+id/name" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="150px"
            android:layout_marginTop="20px"
            android:layout_below="@id/name"
            android:layout_toRightOf="@id/cardView1"
            android:id="@+id/linearLayout1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="50px"
                android:id="@+id/linux" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="50px"
                android:layout_toRightOf="@id/linux"
                android:id="@+id/pc" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="50px"
                android:id="@+id/mac" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="50px"
                android:id="@+id/psVita" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="50px"
                android:id="@+id/ps3" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="50px"
                android:id="@+id/ps4" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="50px"
                android:id="@+id/ps5" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="50px"
                android:layout_toRightOf="@id/ps4"
                android:id="@+id/xbox360" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="50px"
                android:id="@+id/xboxO" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="50px"
                android:id="@+id/xboxX" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="50px"
                android:id="@+id/n3DS" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="50px"
                android:id="@+id/nWii" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="50px"
                android:id="@+id/nSwitch" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="50px"
                android:id="@+id/android" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="50px"
                android:id="@+id/iOS" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="50px"
                android:id="@+id/psVR" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="50px"
                android:id="@+id/oculusVR" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="50px"
                android:id="@+id/steamVR" />
        </LinearLayout>
        <TextView
            android:text="Release Date"
            android:textSize="70px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"          
            android:layout_below="@id/linearLayout1"
            android:layout_toRightOf="@id/cardView1"
            android:id="@+id/releaseDate" />
    </RelativeLayout>
</RelativeLayout>